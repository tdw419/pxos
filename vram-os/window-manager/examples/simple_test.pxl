; simple_test.pxl - Minimal test program for the assembler
; Tests basic arithmetic and control flow instructions

START:
    LOADI R1, #42          ; R1 = 42
    LOADI R2, #10          ; R2 = 10

    ADD R1, R2             ; R1 = R1 + R2 = 52
    LOADI R3, #5
    MUL R1, R3             ; R1 = R1 * R3 = 260 (will overflow to 4 in 8-bit)

    CMP R1, #0
    JEQ END                ; Jump if equal

    LOADI R4, #1
    SUB R1, R4             ; R1 = R1 - 1

    JMP START              ; Loop back

END:
    HALT
