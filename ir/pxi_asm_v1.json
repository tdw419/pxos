      "args": ["target:label"],
      "example": "CALL print_string"
    },
    "INT": {
      "args": ["num:imm"],
      "example": "INT 0x10"
    },
    "PUSH": {"args": ["src:reg|mem|imm"]},
    "POP": {"args": ["dst:reg"]},
    "RET": {"args": []},
    "JMP": {"args": ["target:label"]},
    "CMP": {"args": ["op1:reg|mem", "op2:reg|mem|imm"]},
    "JE": {"args": ["target:label"]},
    "JNE": {"args": ["target:label"]}
  },
  "pseudo_ops": {
